<nav class="level navbar backgroundColour">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/dashboard" class="level-item has-text-centered navFont">dashboard</a> |
        <button class="no-button navFont" id="logout">logout</button>
        {{else}}
        <a href="/login" class="level-item has-text-centered navFont">dashboard</a> 
        <h1 class="logo">NoteApp</h1>
        <a href="/logout" class="level-item has-text-centered btn-no-style navFont" id="logout">logout</a>
        {{/if}}
</nav>

<div class="columns">

  <div class="column is-two-fifths container ">

    <div>

      <div class="box card-content textAlign backgroundColour">
          <p> Welcome to the NoteApp {{entrys.[0].user.name}}  </p>
          <p>Current date selected: {{format_date entrys.[0].entry_date}}</p>
      </div>

      <div class="card-content textAlign box backgroundColour">
          <form>
            <div class="field">
              <label class="label">How much water did you drink last today?</label>
              <div class="columns">
                <div class="column is-one-fifth alignRight ">
                  <input id ="waterIntake" class="input inputWidth" type="number" placeholder="glasses">
                </div> 
                <div class="column alignLeft">
                  <button id ="waterIntakeBtn" class="button is-primary">Confirm</button>
                </div>
              </div>
            </div>
          <p class="subtitle">
          You drank {{entrys.[0].water}} glasses of water today
          </p>
          </form> 
          <p class="subtitle">
          
          </p>
      </div>

      <div class="card-content textAlign box backgroundColour">
          <form>

            <div class="field">
              <label class="label">How much exercise did you do today?</label>
              
              <div class="columns">
                
                <div class="column is-one-fifth alignRight ">
                  <input id="exerciseInput" class="input inputWidth " type="number" placeholder="minutes">
                </div>
                
                <div class="column alignLeft">
                  <button id="exerciseBtn" class="button is-primary ">Confirm</button>
                </div>
              
              </div>
            
            </div>
          <p class="subtitle">
          You did {{entrys.[0].exercise}} minutes of exercise today
          </p>
          </form>   
      </div>
      <div class="card-content textAlign box backgroundColour">
          <form>
            <div class="field">
              <label class="label">How much sleep did you get last night?</label>
              <div class="columns">
                <div class="column is-one-fifth alignRight ">
                  <input id="sleepInput" class="input inputWidth" type="number" placeholder="minutes">
                </div>
                <div class="column alignLeft">
                  <button id="sleepBtn" class="button is-primary">Confirm</button>
                </div>
              </div> 
            </div>
          <p class="subtitle">
          You had {{entrys.[0].sleep}} minutes of sleep last night
          </p>
          </form> 
      </div>

      <div class="card-content textAlign box backgroundColour">
          <form>
            <div class="field">
              <label class="label">What was you average mood today?</label>
              <div class="columns"> 
                <div class="column is-one-fifth alignRight ">
                  <input id="moodInput" class="input inputWidth" type="number" placeholder="/10">
                </div>      
                <div class="column alignLeft">
                  <button id="moodBtn" class="button is-primary">Confirm</button>
                </div>              
              </div>
            </div>
          <p class="subtitle">
          You had an average mood of {{entrys.[0].mood}}/10 today
          </p>
          {{#if entry}}

          {{/if}}
          </form> 
      </div>    
    </div> 
  </div>
  
  <div class="column is-three-fifths container">
    <div>
      <div class="calendar">

        <div class="front">

          <div class="current-date">
            <h1>{{entrys.[0].entry_date}}</h1>
          </div>

          <div class="current-month">
            <ul class="week-days">
              <li>MON</li>
              <li>TUE</li>
              <li>WED</li>
              <li>THU</li>
              <li>FRI</li>
              <li>SAT</li>
              <li>SUN</li>
            </ul>

            <div class="weeks">

              <div class="first">
                <span class="last-month">28</span>
                <span class="last-month">29</span>
                <span class="last-month">30</span>
                <span class="last-month">31</span>
                <span>01</span>
                <span>02</span>
                <span><a href='/dashboard/date/03' data-notes='2' data-date="03-06-2021">03</a></span>
              </div>

              <div class="second">
                <span>04</span>
                <span>05</span>
                <span class="event">06</span>
                <span>07</span>
                <span>08</span>
                <span>09</span>
                <span>10</span>
              </div>

              <div class="third">
                <span>11</span>
                <span>12</span>
                <span>13</span>
                <span>14</span>
                <span class="active">15</span>
                <span>16</span>
                <span>17</span>
              </div>

              <div class="fourth">
                <span>18</span>
                <span>19</span>
                <span>20</span>
                <span>21</span>
                <span>22</span>
                <span>23</span>
                <span>24</span>
              </div>

              <div class="fifth">
                <span>25</span>
                <span>26</span>
                <span>27</span>
                <span>28</span>
                <span>29</span>
                <span>30</span>
                <span>31</span>
              </div>

            </div>
            
          </div>

        </div>

        <div class="back">
          <input placeholder="What's the event?">
          <div class="info">
            <div class="date">
              <p class="info-date">
              Date: <span>Jan 15th, 2016</span>
              </p>
              <p class="info-time">
                Time: <span>6:35 PM</span>
              </p>
            </div>
            <div class="address">
              <p>
                Address: <span>129 W 81st St, New York, NY</span>
              </p>
            </div>
            <div class="observations">
              <p>
                Observations: <span>Be there 15 minutes earlier</span>
              </p>
            </div>
          </div>

          <div class="actions">
            <button class="save">
              Save <i class="ion-checkmark"></i>
            </button>
            <button class="dismiss">
              Dismiss <i class="ion-android-close"></i>
            </button>
          </div>
        </div>

      </div>

    </div>
    
    <div class="box backgroundColour">
      <textarea id="notesInput" class="textarea" rows= "11" placeholder="e.g. Hello world">{{entrys.[0].notes}}</textarea>
       <button id ="notesBtn" class="button is-primary is-fullwidth">Confirm</button>    
    </div>
    

  </div>
</div>

<script src="/javscript/logout.js"></script>
<script src="/javscript/dashboard.js"></script>

